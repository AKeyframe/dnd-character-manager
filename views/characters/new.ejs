<!DOCTYPE html>
<html lang="en">
    <%- include('../partials/head.ejs'); %>
<body>
    <%- include('../partials/nav.ejs'); %>
    <h1>Character Creation</h1>

    <div>
        <form class="charForm" action="/characters" method="POST">
            
                <input type="hidden" name="creator" value="<%= user._id %>">
            
            <div class="inpCharName"></div>
                <input type="text" name="name" placeholder="Name"><br>
            </div>

            <input type="text" name="race" placeholder="race"><br>
            <input type="text" name="class" placeholder="class"><br>
            <input type="number" name="level" placeholder="level"><br>
            <br>

            <label for=hp>HP</label>
            <input id=hp type="number" name=hp placeholder ="HP"><br>

            <label for=ac>AC</label>
            <input id=ac type="number" name=ac placeholder="AC"><br>

            
            <fieldset class="stats">
                <legend>Stats</legend>

                <label for="str">Strength</label>
                <input id="str" type="number" name="stats.str.val" min=1 max=20 placeholder="10"><br>

                <label for="dex">Dexterity</label>
                <input id="dex" type="number" name=stats.dex.val min=1 max=20 placeholder="10"><br>

