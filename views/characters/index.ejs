<!DOCTYPE html>
<html lang="en">
    <%- include('../partials/head.ejs'); %>
<body>
    <%- include('../partials/nav.ejs'); %>
    <h1>Your Characters</h1>

    <a href="/characters/new">Create A Character</a>
    
    <% if(chars.length != 0) { %>
        <% chars.forEach( (c, i) => { %>
            <a href='/characters/<%= c._id %>'><h3><%= c.name %></h3></a>
            <form action="/characters/<%= c._id%>?_method=DELETE" method="POST">
                <input type="submit" value="Delete Character">
            </form>
        <% }) %>
    <% } %>
</body>
</html>